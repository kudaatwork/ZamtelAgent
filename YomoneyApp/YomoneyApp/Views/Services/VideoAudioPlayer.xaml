<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="YomoneyApp.Views.Services.VideoAudioPlayer"
              xmlns:mm="clr-namespace:MediaManager.Forms;assembly=MediaManager.Forms"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <mm:VideoView VerticalOptions="FillAndExpand" Source="{Binding MediaSource}"  ShowControls="True" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>