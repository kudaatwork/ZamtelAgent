<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:magic="clr-namespace:MagicGradients;assembly=MagicGradients"
             x:Class="YomoneyApp.Views.Login.AccountMain"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        
        <StackLayout BackgroundColor="#e2762b">
            
            <Grid  BackgroundColor="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
               
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <magic:GradientView VerticalOptions="FillAndExpand">
                    <magic:GradientView.GradientSource>
                        <magic:LinearGradient Angle="0">
                            <magic:GradientStop Color="#79c606" Offset="0" />
                            <magic:GradientStop Color="#e2762b" Offset="1" />
                        </magic:LinearGradient>
                    </magic:GradientView.GradientSource>
                </magic:GradientView>

                <Image Grid.Row="0" HorizontalOptions="Center" Source="yomoneywhite.png"/>
                
                <Grid Grid.Row="1">
                    <Grid.Padding>
                        <OnIdiom x:TypeArguments="Thickness">
                            <OnIdiom.Phone>10,10,10,0</OnIdiom.Phone>
                            <OnIdiom.Tablet>20,20,20,0</OnIdiom.Tablet>
                        </OnIdiom>
                    </Grid.Padding>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                    Grid.Row="0"
			        FontSize="Medium"
                    HorizontalOptions="Center"
			        Text="Welcome to Yoapp"
			        TextColor="White"/>
                    <Label
                    Grid.Row="1"
			        FontSize="Medium"
                    HorizontalOptions="Center"
			        Text="Get the best deals for your money"
			        TextColor="White"/>
                    <Button 
			        x:Name="ButtonJoin"
                    Grid.Row="2"
			        BackgroundColor="White"
			        BorderRadius="6"
			        TextColor="#e2762b" 
			        Text="Join"
			       />
                    <Button 
			        x:Name="ButtonLogin"
                    Grid.Row="3"
			        BackgroundColor="Transparent"
			        BorderRadius="6"
			        TextColor="White" 
			        Text="Login"
			       />

                </Grid>
           </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>